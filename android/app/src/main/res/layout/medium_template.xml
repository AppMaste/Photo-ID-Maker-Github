<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <ImageView
                    android:id="@+id/native_ad_icon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:paddingRight="5dp"
                    android:scaleType="fitXY"
                    tools:background="#EDEDED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">

                    <!--                    <RatingBar-->
                    <!--                        android:id="@+id/native_ad_rating"-->
                    <!--                        style="?android:attr/ratingBarStyleSmall"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="2dp"-->
                    <!--                        android:isIndicator="true"-->
                    <!--                        android:numStars="5"-->
                    <!--                        android:stepSize="0.5" />-->


                    <TableRow
                        android:id="@+id/firstRow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        tools:ignore="DuplicateIds">

                        <TextView
                            android:id="@+id/native_ad_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            tools:text="Headline" />

                    </TableRow>


                    <TableRow
                        android:id="@+id/firstRow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        tools:ignore="DuplicateIds">

                        <!-- first element of the row-->
                        <TextView
                            android:id="@+id/native_ad_attribution_small"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/adbox"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Ad"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/native_ad_advertiser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColor="#828282"
                            android:textSize="@dimen/_9sdp"
                            tools:text="advertiser name" />

                    </TableRow>
                </LinearLayout>
            </TableRow>

            <TextView
                android:id="@+id/native_ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#828282"
                android:textSize="14sp"
                tools:text="body" />


            <Button
                android:id="@+id/native_ad_button"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/box"
                android:text="Install"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/_15sdp"
                android:textScaleX="0.9" />

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_4sdp">

            </com.google.android.gms.ads.nativead.MediaView>
        </LinearLayout>
    </FrameLayout>


</com.google.android.gms.ads.nativead.NativeAdView>